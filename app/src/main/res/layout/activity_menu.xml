<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/app_background"
    android:orientation="vertical"
    tools:context="com.si5.camash.fruityco.ui.activities.MenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Menu"
        android:layout_margin="32dp"
        android:gravity="center_horizontal"
        android:textSize="50sp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lvl1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Associer un nom à une image"
        android:gravity="center_horizontal"
        android:textSize="32sp"
        android:layout_margin="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lvl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2. Associer une image à un nom"
        android:gravity="center_horizontal"
        android:textSize="32sp"
        android:layout_margin="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lvl3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="3. Associer plusieurs noms à plusieurs images"
        android:gravity="center_horizontal"
        android:textSize="32sp"
        android:layout_margin="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lvl4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="4. Fruit ou légume (Son)"
        android:gravity="center_horizontal"
        android:textSize="32sp"
        android:layout_margin="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lvl5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="5. Fruit ou légume (image"
        android:gravity="center_horizontal"
        android:textSize="32sp"
        android:layout_margin="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/lvl6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="6. Liste de cource"
        android:gravity="center_horizontal"
        android:textSize="32sp"
        android:layout_margin="16dp"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>



</LinearLayout>
